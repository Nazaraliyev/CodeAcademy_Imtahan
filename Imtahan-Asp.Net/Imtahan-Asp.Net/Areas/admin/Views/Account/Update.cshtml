@model VmUserUpdate


<div class="container-fluid">
    <h2 class="mb-5">Update Users</h2>
    <form class="w-50" asp-action="update" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="@Model.Name">
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Surname" class="form-label">Surname</label>
            <input type="text" class="form-control" asp-for="@Model.Surname">
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Email" class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="@Model.Email">
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Phone" class="form-label">Phone</label>
            <input type="number" class="form-control" asp-for="@Model.Phone">
        </div>

        <input asp-for="@Model.Id" hidden/>

        <button class="btn btn-primary mr-3" type="submit">Update Now</button>
        <a asp-action="Index" class="text-danger">Go to Back</a>
    </form>
</div>

