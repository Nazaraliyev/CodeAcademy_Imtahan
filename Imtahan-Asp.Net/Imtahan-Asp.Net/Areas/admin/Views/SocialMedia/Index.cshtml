@model List<SocialMedia>


<div class="container-fluid">
    <h2 class="mb-5">Social Medias</h2>
    <a asp-action="create" class="btn btn-primary mb-3">Create New Social Media Address</a>
    <table class="table table-striped w-50">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Icon</th>
                <th scope="col">Name</th>
                <th scope="col" >Link</th>
                <th scope="col">Modify</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 1;

                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@i</th>
                        <td>
                            <div style="width : 40px; height: 40px; border-radius : 5px; background-color : @item.Color;" class="d-flex justify-content-center align-items-center">
                                <i class="@item.Icon text-white"></i>
                            </div>

                        </td>
                        <td>@item.Name</td>
                        <td><a href="@item.Link">Link</a></td>
                        <td>
                            <a asp-action="Update" class="btn btn-success" asp-route-id="@item.Id">Update</a>
                            <a asp-action="delete" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')">Delete</a>
                        </td>

                    </tr>

                    i++;
                }
            }
        </tbody>
    </table>
</div>

