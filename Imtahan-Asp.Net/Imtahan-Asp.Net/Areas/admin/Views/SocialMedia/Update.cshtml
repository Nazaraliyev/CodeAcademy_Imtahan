@model SocialMedia

<div class="container-fluid">
    <h2 class="mb-5">Create New Sosial Media</h2>
    <form class="w-50" asp-action="Update" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="@Model.Name">
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Icon" class="form-label">Icon Class</label>
            <input type="text" class="form-control" asp-for="@Model.Icon">
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Link" class="form-label">Link</label>
            <input type="text" class="form-control" asp-for="@Model.Link">
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Color" class="form-label">Color</label>
            <input type="text" class="form-control" asp-for="@Model.Color">
        </div>
        <input asp-for="@Model.Id" hidden/>
        <button class="btn btn-primary mr-3" type="submit">Update</button>
        <a asp-action="Index" class="text-danger">Go to Back</a>
    </form>
</div>
