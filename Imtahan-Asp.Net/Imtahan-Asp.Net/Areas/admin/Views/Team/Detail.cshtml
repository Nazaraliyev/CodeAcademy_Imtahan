@model Team



<div class="container-fluid">
    <h2 class="mb-5">Team member Details</h2>
    <hr />

    <div class="mt-3">
        <div class="row">
            <div class="col-3">
                <img src="~/assets/img/team/@Model.Photo" style="max-width : 300px; max-height : 300px"/>

            </div>
            <div class="col-9">
                <h3>@Model.Name</h3>
                <p>@Model.Content</p>
                <span>@Model.TeamPosition.Name</span>
            </div>
        </div>
        <div class="mt-4">
            <a class="btn btn-primary mr-3" asp-action="Update" asp-route-id="@Model.Id">Update</a>
            <a class="btn btn-danger mr-3" asp-action="delete" asp-route-id="@Model.Id">Delete</a>
            <a class="text-danger" asp-action="index">Go to Back</a>
        </div>
    </div>
</div>