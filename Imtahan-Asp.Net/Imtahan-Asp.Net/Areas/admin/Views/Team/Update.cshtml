@model VmTeamUpdate


<div class="container-fluid">
    <h2 class="mb-5">Update Team Member</h2>
    <form class="w-50" asp-action="update" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="@Model.PhotoFile" class="form-label">Photo</label>
            <input class="form-control" asp-for="@Model.PhotoFile">
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="@Model.Name">
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Content" class="form-label">Info</label>
            <textarea class="form-control" asp-for="@Model.Content"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.PositionId" class="form-label">Position</label>
            <select class="form-select form-control" asp-for="@Model.PositionId" asp-items="@(new SelectList(Model.teamPositions, "Id", "Name"))">
                <option selected disabled>Select Positipon</option>
            </select>
        </div>
        <input asp-for="@Model.Photo" hidden />
        <input asp-for="@Model.Id" hidden />
        <button class="btn btn-primary mr-3" type="submit">Update</button>
        <a asp-action="Index" class="text-danger">Go to Back</a>
    </form>
</div>
