@model List<Work>


<div class="container-fluid">
    <h2 class="mb-5">Works</h2>
    <a asp-action="create" class="btn btn-primary mb-3">Create New Work Card</a>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-3">
                <div class="work-item">
                    <div>
                        <img src="~/assets/img/work/@item.Photo" />
                    </div>
                    <h3>@item.Tittle</h3>
                    <p>@item.Text</p>
                    <div class="mt-3">
                        <a asp-action="update" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
                        <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        }

    </div>
       
</div>