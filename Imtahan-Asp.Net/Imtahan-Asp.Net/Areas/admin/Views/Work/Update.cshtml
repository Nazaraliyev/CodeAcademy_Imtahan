@model VmWorkUpdate

<div class="container-fluid">
    <h2 class="mb-5">Create New Work Card</h2>
    <form class="w-50" asp-controller="work" asp-area="admin" asp-action="update" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="@Model.PhotoFile" class="form-label">Phoyo</label>
            <input class="form-control" asp-for="@Model.PhotoFile">
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Tittle" class="form-label">Tittle</label>
            <input type="text" class="form-control" asp-for="@Model.Tittle">
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Text" class="form-label">Text</label>
            <textarea class="form-control" asp-for="@Model.Text"></textarea>
        </div>
        <input asp-for="@Model.Id" hidden />
        <input asp-for="@Model.Photo" hidden />
        <button class="btn btn-primary mr-3" type="submit">Create</button>
        <a asp-action="Index" class="text-danger">Go to Back</a>
    </form>
</div>
